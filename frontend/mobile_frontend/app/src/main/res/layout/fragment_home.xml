<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient_mauve"
    android:padding="24dp">

    <!-- Background Image avec overlay -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:alpha="0.2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Gradient Overlay Mauve -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/gradient_overlay_mauve"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Content Container -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3">

        <!-- Logo/Icon -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/baseline_music_note_24"
            app:tint="@color/white"
            android:layout_marginBottom="32dp" />

        <!-- Welcome Title -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenue sur"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="normal"
            android:letterSpacing="0.02"
            android:layout_marginBottom="8dp" />

        <!-- App Name -->
        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="music app"
            android:textColor="@color/white"
            android:textSize="42sp"
            android:textStyle="bold"
            android:letterSpacing="0.03"
            android:layout_marginBottom="16dp" />

        <!-- Tagline -->
        <TextView
            android:id="@+id/tvTagline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Découvrez le monde de music avec des expériences de music app"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textAlignment="center"
            android:lineSpacingExtra="4dp"
            android:alpha="0.9"
            android:layout_marginBottom="48dp" />

    </LinearLayout>

    <!-- Bottom Action Buttons -->
    <LinearLayout
        android:id="@+id/bottomButtonsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.8">

        <!-- Login Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Se connecter"
            android:textSize="16sp"
            android:textStyle="bold"
            android:letterSpacing="0.02"
            app:icon="@drawable/ic_login_white"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:cornerRadius="16dp"
            android:layout_marginBottom="16dp"
            style="@style/Widget.Material3.Button"
            android:backgroundTint="@color/white"
            android:textColor="@color/mauve_primary" />

        <!-- Register Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Créer un compte"
            android:textSize="16sp"
            android:textStyle="bold"
            android:letterSpacing="0.02"
            app:icon="@drawable/ic_person_add_white"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:cornerRadius="16dp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:textColor="@color/white"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp" />

        <!-- Guest Access -->
        <TextView
            android:id="@+id/tvGuest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:padding="16dp"
            android:alpha="0.9"
            android:layout_marginTop="24dp"
            android:drawablePadding="8dp"
             />

    </LinearLayout>

    <!-- Bottom Wave Decoration -->
    <ImageView
        android:id="@+id/waveDecoration"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:src="@drawable/wave_bottom_mauve"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>