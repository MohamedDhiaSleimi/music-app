<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login_gradient"
    android:padding="0dp"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header avec vague décorative -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:background="@drawable/header_wave_mauve">

            <!-- BOUTON DÉCONNEXION -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogout"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_margin="16dp"
                android:text="Déconnexion"
                android:textColor="@android:color/white"
                app:icon="@drawable/ic_logout"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="@android:color/white" />

            <!-- Overlay sombre -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_overlay_dark" />

            <!-- Contenu header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:padding="24dp">

                <!-- Titres -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:letterSpacing="0.02"
                    android:text="Explorer les offres"
                    android:textColor="@android:color/white"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:alpha="0.9"
                    android:text="Trouvez la destination parfaite"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

            </LinearLayout>

        </RelativeLayout>

        <!-- Carte principale -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_form_card_modern"
            android:layout_marginTop="-40dp"
            android:paddingTop="40dp"
            android:padding="24dp"
            android:elevation="16dp"
            app:cardCornerRadius="32dp">

            <!-- Barre de recherche -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:strokeColor="#E5E7EB"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:boxBackgroundMode="none"
                        app:hintTextColor="#2563EB"
                        app:startIconDrawable="@drawable/ic_search_mauve"
                        app:startIconTint="@color/mauve_primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/searchEdit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Destination, hôtel, activité..."
                            android:background="@null"
                            android:textColor="#1e293b"
                            android:textSize="16sp"
                            android:padding="12dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Bouton Recherche -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/searchButton"
                        style="@style/Widget.Material3.Button.Icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="8dp"
                        app:icon="@drawable/ic_search_white"
                        app:iconTint="@android:color/white"
                        app:backgroundTint="@color/mauve_primary"
                        app:cornerRadius="12dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Section Filtres -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <!-- Filtre Type -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundColor="@android:color/white"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxStrokeColor="#2563EB"
                        app:hintTextColor="#2563EB"
                        app:startIconDrawable="@drawable/ic_category_mauve"
                        app:startIconTint="@color/mauve_primary">

                        <AutoCompleteTextView
                            android:id="@+id/filterTypeSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Type d'offre"
                            android:inputType="none"
                            android:textColor="#1e293b"
                            android:textSize="16sp"
                            android:padding="16dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Bouton Actualiser -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/refreshButton"
                    style="@style/Widget.Material3.Button.Icon"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    app:icon="@drawable/ic_refresh_white"
                    app:iconTint="@android:color/white"
                    app:backgroundTint="@color/mauve_primary"
                    app:cornerRadius="14dp" />

            </LinearLayout>

            <!-- Section Tri par prix -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Trier par prix"
                        android:textColor="#374151"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <RadioGroup
                        android:id="@+id/sortRadioGroup"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <!-- RadioButton style moderne -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            app:cardBackgroundColor="?attr/colorSurface"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:strokeColor="#2563EB"
                            app:strokeWidth="1dp">

                            <RadioButton
                                android:id="@+id/sortAsc"
                                android:layout_width="match_parent"
                                android:layout_height="56dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:button="@null"
                                android:gravity="center"
                                android:text="Prix Croissant"
                                android:textColor="#374151"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            app:cardBackgroundColor="?attr/colorSurface"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:strokeColor="#2563EB"
                            app:strokeWidth="1dp">

                            <RadioButton
                                android:id="@+id/sortDesc"
                                android:layout_width="match_parent"
                                android:layout_height="56dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:button="@null"
                                android:gravity="center"
                                android:text="Prix Décroissant"
                                android:textColor="#374151"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </com.google.android.material.card.MaterialCardView>

                    </RadioGroup>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Filtres actifs -->
            <LinearLayout
                android:id="@+id/activeFiltersContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_filter_chip"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:text="Tous types"
                    android:textColor="#2563EB"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_filter_chip"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:text="Prix croissant"
                    android:textColor="#2563EB"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- En-tête résultats -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/resultsCount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0 offres trouvées"
                    android:textColor="#374151"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/activeFilter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12sp"
                    android:textColor="#2563EB"
                    android:background="@drawable/bg_filter_chip"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:visibility="gone"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Liste des offres -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp" />

            <!-- Footer -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="© 2024 music app. Tous droits réservés."
                android:textColor="#9ca3af"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>