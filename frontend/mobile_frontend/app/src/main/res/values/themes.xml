<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme with Blue palette -->
    <style name="Base.Theme.MusicApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color - Blue -->
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryVariant">@color/blue_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/blue_secondary</item>
        <item name="colorSecondaryVariant">@color/blue_light</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/light_background</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/dark_color</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/blue_primary_dark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/blue_primary_dark</item>

        <!-- Error color -->
        <item name="colorError">@color/error_color</item>
        <item name="colorOnError">@color/white</item>
    </style>

    <style name="Theme.MusicApp" parent="Base.Theme.MusicApp" />

    <!-- Button Styles -->
    <style name="Widget.MusicApp.Button.Primary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/blue_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="Widget.MusicApp.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/blue_primary</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/blue_primary</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- TextInputLayout Style -->
    <style name="Widget.MusicApp.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/blue_primary</item>
        <item name="hintTextColor">@color/blue_primary</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
    </style>
</resources>